{
	"type": "config",
	"title": "Union Filesystems",
	"id": "conf.service.unionfilesystems",
	"queryinfo": {
		"xpath": "/config/services/unionfilesystems",
		"iterable": false
	},
	"properties": {
		"filesystem": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"uuid": {
						"type": "string",
						"format": "uuidv4"
					},
					"name": {
						"type": "string",
						"minLength": 1
					},
					"self-mntentref": {
						"type": "string",
						"format": "uuidv4"
					},
					"mntentref": {
						"type": "array",
						"items": {
							"type": "string",
							"format": "uuidv4"
						},
						"minItems": 2,
						"uniqueItems": true
					},
					"create-policy": {
						"type": "string",
						"enum": ["all", "epall", "epff", "eplfs", "eplus", "epmfs", "eprand", "erofs", "ff", "lfs", "lus", "mfs", "newest", "rand"]
					},
					"min-free-space": {
						"type": "string",
						"format": "regex",
						"pattern": "^[0-9]+[KMG]$"
					},
					"options": {
						"type": "string"
					}
				}
			}
		}
	}
}
