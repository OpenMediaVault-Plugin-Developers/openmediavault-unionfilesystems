[{
	"type": "rpc",
	"id": "rpc.unionfilesystems.set",
	"params": {
		"type": "object",
		"properties": {
			"uuid": {
				"type": "string",
				"format": "uuidv4",
				"required": true
			},
			"name": {
				"type": "string",
				"required": true
			},
			"self_mntentref": {
				"type": "string",
				"format": "uuidv4",
				"required": true
			},
			"mntentref": {
				"type": "array",
				"items": {
					"type": "string",
					"format": "uuidv4"
				},
				"minItems": 2,
				"uniqueItems": true,
				"required": true
			},
			"create_policy": {
				"type": "string",
				"enum": ["all", "epall", "epff", "eplfs", "eplus", "epmfs", "eprand", "erofs", "ff", "lfs", "lus", "mfs", "newest", "rand"]
			},
			"min_free_space": {
				"type": "string",
				"format": "regex",
				"pattern": "^[0-9]+[KMG]$"
			},
			"options": {
				"type": "string"
			}
		}
	}
}]
